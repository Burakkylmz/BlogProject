
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model  IEnumerable<Blog>

<div class="container mt-3">
    <h2>Blog List</h2>
    <hr />
    <div class="btn btn-primary" href="/Blog/Create">Create</div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Is Active</th>
                            <th>Is Home</th>
                            <th>Is Slider</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>
                                    <img src="~/img/`@item.ImageUrl" width="100" />
                                </td>
                                <td>@item.Title</td>
                                <td>@item.AddDate</td>
                                <td>
                                    @if (item.isActive)
                                    {
                                        <i class="fa fa-check" aria-hidden="true"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-times" aria-hidden="false"></i>
                                    }
                                </td>
                                <td>
                                    @if (item.isHome)
                                    {
                                        <i class="fa fa-check" aria-hidden="true"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-times" aria-hidden="true"></i>
                                    }
                                </td>
                                <td>
                                    @if (item.isSlider)
                                    {
                                        <i class="fa fa-check" aria-hidden="true"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-times" aria-hidden="true"></i>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-controller="Blog" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Blog eklenmemiştir.
                </div>
            }
        </div>
    </div>
</div>

